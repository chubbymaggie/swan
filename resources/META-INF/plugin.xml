<idea-plugin>
    <id>de.fraunhofer.iem.mois.assist</id>
    <name>AssistMOIS</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="https://www.iem.fraunhofer.de/">Fraunhofer IEM</vendor>

    <description><![CDATA[
      IDE support for the identification of configured methods for static analyses<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <toolWindow id="AssistMOIS" anchor="right" factoryClass="de.fraunhofer.iem.mois.assist.ui.SummaryToolWindow" icon="PluginIcons.MOIS_ASSIST"/>

    </extensions>

    <actions>
        <!-- Add your actions here -->

        <group id="AssistMOIS.ActionBar" text="AssistMOIS" popup="false" >

            <action id="AssistMOIS.ImportAction" class="de.fraunhofer.iem.mois.assist.actions.ImportAction"
                    text="Import File"
                    icon="PluginIcons.IMPORT_ACTION"
                    description="Import configuration file">
            </action>

            <action id="AssistMOIS.ExportAction"
                    class="de.fraunhofer.iem.mois.assist.actions.ExportAction"
                    icon="PluginIcons.EXPORT_ACTION"
                    text="Export File"
                    description="Export configuration file">
            </action>

            <separator/>
            <group id="AssistMOIS.FilterActionGroup" class="de.fraunhofer.iem.mois.assist.actions.filter.FilterActionGroup"
                   text="Filter Methods"
                   popup="true" icon="PluginIcons.FILTER_ACTION">
            </group>
            <separator/>

            <action id="AssistMOIS.LaunchMOISAction"
                    class="de.fraunhofer.iem.mois.assist.actions.LaunchMoisAction"
                    icon="PluginIcons.REFRESH_MOIS"
                    text="Refresh MOIS">
            </action>

            <separator/>

            <action id="AssistMOIS.HelpAction"
                    class="de.fraunhofer.iem.mois.assist.actions.HelpAction"
                    text="Help" description="Resources" icon="PluginIcons.HELP_ACTION">
            </action>
        </group>

        <group id="AssistMOIS.MethodActionGroup" class="de.fraunhofer.iem.mois.assist.actions.method.MethodActionGroup" text="Method"
               popup="true" icon="PluginIcons.FILTER_ACTION">

        </group>

        <group id="AssistMOIS.CategoryActionGroup" class="de.fraunhofer.iem.mois.assist.actions.filter.CategoryActionGroup" text="Filter"
               popup="true" icon="PluginIcons.FILTER_ACTION">

        </group>

        <group id="EditorGroup" text="AssistMOIS" popup="true" icon="PluginIcons.MOIS_ASSIST">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <action id="AssistMOIS.AddMethodAction" class="de.fraunhofer.iem.mois.assist.actions.method.AddMethodAction"
                    text="Add Method" icon="PluginIcons.ADD_METHOD_ACTION">
            </action>

        </group>

    </actions>


</idea-plugin>